<h1>Recordings</h1>

<%= form_tag recordings_path, :method => 'get' do %>
<p>
  <div class="control-group">
    <div class="well form-search">
      <%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
      <%= submit_tag "Search", :name => nil, :class => 'btn' 'btn-mini' %>
    </div>
  </div>
</p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "artist" %></th>
      <th><%= sortable "title" %></th>
      <th><%= sortable "published" %></th>
    </tr>
  </thead>
  <tbody>
    <% @recordings.each do |recording| %>
    <tr>
      <td><%= link_to recording.artist, recording_path(recording) %></td>
      <td><%= recording.title %></td>
      <td><%= recording.published %></td>
      <td id ="recording_<%= recording.id %>" >
        <%= link_to 'Edit', edit_recording_path(recording), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', recording_path(recording), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger'%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @recordings %>

<%= link_to 'New', new_recording_path, :class => 'btn btn-primary' %>
